extends layout
block content
          .row
            h1 Welcome to the edit Employee page
                .grid-container 
                 .item
                  each emps in indTwo
                    form(method="post")
                     fieldset
                      label(for="name") Name:
                      input(style="display:block", name="name", type="text", value="#{emps.name}", required, pattern="[a-zA-Z][A-Za-z' -]+{1,25}" title="only letters and spaces please. You must have at least one letter")
                      br
                      label(for="email") E-mail:
                      input(style="display:block",name="email", type="email", value="#{emps.email}", required, pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$")
                      br
                      label(for="role") Role:
                      input(style="display:block",name="role", type="text", value="#{emps.role}", required, pattern="[a-zA-Z][A-Za-z' -]+{3,15}", title="please enter only letters and spaces, At least three letters needed")
                      br
                      label(for="mobile") Mobile:
                      input(style="display:block",name="mobile", type="tel", value="#{emps.mobile}", required, pattern="[0-9]{10,10}", title="please enter a valid 10 digit mobile number")
                      label(for="password") Admin Password:
                      input#password(placeholder='Password', required='', type='password')
                      label(for="vpassword") Verify Admin Password:
                      input#confirm_password(placeholder='Confirm Password', required='', type='password')
                      
                      br
                      button.button(type="submit") Edit Employee
                      
                      script.
                        var password = document.getElementById("password")
                        , confirm_password = document.getElementById("confirm_password");
                        function validatePassword(){
                        if(password.value != confirm_password.value) {
                        confirm_password.setCustomValidity("Passwords Don't Match");
                        } else {
                        confirm_password.setCustomValidity('');
                        }
                        }
                        password.onchange = validatePassword;
                        confirm_password.onkeyup = validatePassword;
                      