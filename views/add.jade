extends layout
block content
      .row
          h1 Welcome To The Add Product Page <br><br>
             .formHold
               h3.itemtitle Add New Product <br><br>
                   form(method="post")  
                       fieldset 
                         label(for="name") Product Name:
                         input(name="name", type="text", placeholder="Enter a product Name")
                         label(for="type") Type:
                         input(name="type", type="text", placeholder="Enter a sport for this product")
                         label(for="image") Image:
                         input(name="image", type="text", placeholder="Enter an image for this product")
                         label(for="price") Price:
                         input(name="price", type="text", placeholder="Enter a price for this product")
                         button.button1(type="button") Create New Inventory Item